<!DOCTYPE databases PUBLIC
"-//EXOLAB/Castor Mapping DTD Version 1.0//EN"
"http://castor.exolab.org/mapping.dtd">
<mapping>

<description>A mapping settings for Recipe class</description>

<include href="recipe-general-mapping.xml"/>
<include href="behavior-mapping.xml"/>
<include href="plate-alignment-mapping.xml"/>
<include href="zcalibration-mapping.xml"/>
<include href="inspection-area-mapping.xml"/>

<class name="com.klatencor.klara.future.object.recipe.Recipe" auto-complete="true">
    <map-to xml="Recipe"/>
    <field name="recipeGeneral" type="com.klatencor.klara.future.object.recipe.GeneralRecipeData">
        <bind-xml name="GeneralRecipeData"/>
    </field>
     <field name="behavior" type="com.klatencor.klara.future.object.recipe.Behavior">
        <bind-xml name="Behavior"/>
    </field>
     <field name="plateAlignment" type="com.klatencor.klara.future.object.recipe.PlateAlignment">
        <bind-xml name="PlateAlignment"/>
    </field>
    <field name="zCalibration" type="com.klatencor.klara.future.object.recipe.ZCalibration">
        <bind-xml name="ZCalibration"/>
    </field>
    <field name="inspectionAreaList" collection="arraylist" type="com.klatencor.klara.future.object.recipe.InspectionArea">
        <bind-xml name="InspectionArea" location="InspectionAreaList"/>
    </field>
</class>

</mapping>