<!DOCTYPE databases PUBLIC
"-//EXOLAB/Castor Mapping DTD Version 1.0//EN"
"http://castor.exolab.org/mapping.dtd">
<mapping>

<description>A mapping settings for GeneralRecipeData class</description>

<class name="com.klatencor.klara.future.object.recipe.GeneralRecipeData" auto-complete="true">
    <map-to xml="GeneralRecipeData"/>
    <field name="recipeName">
        <bind-xml name="RecipeName" node="attribute"/>
    </field>
    <field name="recipeVersion">
        <bind-xml name="RecipeVersion" node="attribute"/>
    </field>
    <field name="systemType">
        <bind-xml name="RecipeVersion" node="attribute"/>
    </field>
    <field name="minimumRecpeVersion">
        <bind-xml name="RecipeVersion" node="attribute"/>
    </field>
    <field name="opaqueSubstrateMode">
        <bind-xml name="OpaqueSubstrateMode" node="attribute"/>
    </field>
    <field name="note">
        <bind-xml name="Note" node="attribute"/>
    </field>
    <field name="databaseName">
        <bind-xml name="DatabaseName" node="attribute"/>
    </field>
    <field name="plateMirror">
        <bind-xml name="PlateMirror" node="attribute"/>
    </field>
    <field name="dbImageRotation">
        <bind-xml name="DbImageRotation" node="attribute"/>
    </field>
    <field name="platePolarity">
        <bind-xml name="PlatePolarity" node="attribute"/>
    </field>
    <field name="plateTone">
        <bind-xml name="PlateTone" node="attribute"/>
    </field>
    <field name="plateInfo" type="com.klatencor.klara.future.object.recipe.PlateInfo">
        <bind-xml name="PlateInfo"/>
    </field>
    <field name="plateOpticalAttributes" type="com.klatencor.klara.future.object.recipe.PlateOpticalAttributes">
        <bind-xml name="PlateOpticalAttributes"/>
    </field>
    <field name="rteParameters" type="com.klatencor.klara.future.object.recipe.RteParameters">
        <bind-xml name="RteParameters"/>
    </field>
</class>

<class name="com.klatencor.klara.future.object.recipe.PlateInfo" auto-complete="true">
    <field name="plateType">
        <bind-xml name="PlateType" node="attribute"/>
    </field>
</class>

<class name="com.klatencor.klara.future.object.recipe.PlateOpticalAttributes" auto-complete="true">
    <field name="plateType" type="com.klatencor.klara.future.object.recipe.PlateType">
        <bind-xml name="PlateType" />
    </field>
</class>

<class name="com.klatencor.klara.future.object.recipe.PlateType" auto-complete="true">
    <field name="type">
        <bind-xml name="Type" node="attribute" />
    </field>
     <field name="description">
        <bind-xml name="Description" node="attribute" />
    </field>
     <field name="algPlateType">
        <bind-xml name="AlgPlateType" node="attribute" />
    </field>
    <field name="mOPF">
        <bind-xml name="MOPF" node="attribute" />
    </field>
     <field name="zCalModel">
        <bind-xml name="ZCalModel" node="attribute" />
    </field>
     <field name="materials" collection="arraylist" type="com.klatencor.klara.future.object.Material" >
        <bind-xml name="Material"/>
    </field>
    <field name="focusOffsets" collection="arraylist" type="com.klatencor.klara.future.object.FocusOffset" >
        <bind-xml name="FocusOffset"/>
    </field>
    
</class>

<class name="com.klatencor.klara.future.object.recipe.Material" auto-complete="true">
    <field name="name">
        <bind-xml name="Name" node="attribute"/>
    </field>
    <field name="height">
        <bind-xml name="Height" node="attribute"/>
    </field>
    <field name="lightModes" collection="arraylist" type="com.klatencor.klara.future.object.LightMode" >
        <bind-xml name="LightMode"/>
    </field>
</class>

<class name="com.klatencor.klara.future.object.recipe.LightMode" auto-complete="true">
    <field name="illum">
        <bind-xml name="Illum" node="attribute"/>
    </field>
    <field name="grayscale">
        <bind-xml name="Grayscale" node="attribute"/>
    </field>
    <field name="quartzPhaseDegrees">
        <bind-xml name="QuartzPhaseDegrees" node="attribute"/>
    </field>
    <field name="useForGain">
        <bind-xml name="UseForGain" node="attribute"/>
    </field>
</class>

<class name="com.klatencor.klara.future.object.recipe.FocusOffset" auto-complete="true">
   <field name="views" collection="arraylist" type="com.klatencor.klara.future.object.View" >
        <bind-xml name="View"/>
    </field>
</class>

<class name="com.klatencor.klara.future.object.recipe.View" auto-complete="true">
    <field name="name">
        <bind-xml name="Name" node="attribute"/>
    </field>
    <field name="alias">
        <bind-xml name="Alias" node="attribute"/>
    </field>
    <field name="offset">
        <bind-xml name="Offset" node="attribute"/>
    </field>
</class>

<class name="com.klatencor.klara.future.object.recipe.RteParameters" auto-complete="true">
    <field name="rteBoxSize">
        <bind-xml name="RteBoxSize" node="attribute"/>
    </field>
    <field name="rteSense">
        <bind-xml name="RteSense" node="attribute"/>
    </field>
    <field name="rteState">
        <bind-xml name="RteState" node="attribute"/>
    </field>
    <field name="rteRotateAndMirror">
        <bind-xml name="RteRotateAndMirror" node="attribute"/>
    </field>
</class>

</mapping>